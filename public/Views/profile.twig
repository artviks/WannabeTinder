{% include 'Partials/header.twig' %}
{% include 'Partials/nav.twig' %}

<h2 class="title">Welcome, {{ profile.getUser.getName }}!</h2>


{% if profile.getImage %}
    <div class="profilePic">
        <img src='{{ profile.getImage.getRelativePath }}' alt="{{ profile.getUser.getName }}" >
    </div>
{% endif %}

<ul>
    <li>Name: {{ profile.getUser.getName }}</li>
    <li>Surname: {{ profile.getUser.getSurname }}</li>
    <li>Email: {{ profile.getUser.getEmail }}</li>

    {% if profile.getImage %}
        <li>Picture: {{ profile.getImage.getOriginalName }}</li>
    {% endif %}
</ul>



{% if not profile.getImage %}
    <form action="upload" method="post" enctype="multipart/form-data">
        Select image to upload:
        <input type="file" name="fileToUpload" id="fileToUpload" value="Browse">
        <input type="submit" value="Upload Image" name="submit">
    </form>
{% endif %}

{% include 'Partials/footer.twig' %}