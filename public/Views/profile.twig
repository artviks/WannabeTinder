{% include 'Partials/header.twig' %}
{% include 'Partials/nav.twig' %}

<h2 class="text-lg text-center font-bold m-10">Welcome, {{ profile.getUser.getName }}!</h2>

<ul>
    <li>Name: {{ profile.getUser.getName }}</li>
    <li>Surname: {{ profile.getUser.getSurname }}</li>
    <li>Email: {{ profile.getUser.getEmail }}</li>

    {% if profile.getImage %}
    <li>Picture: {{ profile.getImage.getOriginalName }}</li>
    {% endif %}
</ul>

{% if not profile.getImage %}
    <form action="upload" method="post" enctype="multipart/form-data">
        Select image to upload:
        <input type="file" name="fileToUpload" id="fileToUpload" value="Browse">
        <input type="submit" value="Upload Image" name="submit">
    </form>
{% endif %}

{% include 'Partials/footer.twig' %}